@addTagHelper *, Kendo.Mvc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Kendo.Mvc.TagHelpers
@using Kendo.Mvc.UI
<link href="~/examples/content/shared/styles/examples-offline.css" rel="stylesheet" />

<link href="~/styles/kendo.common.min.css" rel="stylesheet">

<div class="demo-section k-content wide">
    <kendo-menu name="menu" direction="MenuDirection.Bottom"
                orientation="MenuOrientation.Vertical"
                close-on-click="false" data-bind="" y>
        <scrollable enabled=true />
        <items>
            <menu-item text="Home" asp-action="tag_helper" asp-controller="Menu"></menu-item>

            <menu-item text="Fabrication"></menu-item>

            <menu-item text="Heijunka Setup"></menu-item>
            <menu-item text="Hang Screen" url="/Database/SimpleDatabase"></menu-item>
            <menu-item text="Takedown Screen" url="/Database/Takedown"></menu-item>
            <menu-item text="Painted Parts" url="/Database/PaintTracker"></menu-item>
            <menu-item text="Takedown Not Recorded"></menu-item>
            <menu-item text="Takedown Live View" url="/Database/Takedown"></menu-item>
            <menu-item text="Heijunka Screen Hang"></menu-item>
            <menu-item text="Heijunka Screen Takedown"></menu-item>
            <menu-item text="Painted Parts (Year-To-Date)"></menu-item>



        </items>
        <open-on-click enabled="true" root-menu-items="true" sub-menu-items="false" />
        <popup-animation>
            <open duration="500" />
            <close duration="300" />
        </popup-animation>
    </kendo-menu>
</div>
</div>
<style>
    #menu h2 {
        font-size: 1em;
        text-transform: uppercase;
        padding: 5px 10px;
    }

    #template img {
        margin: 5px 20px 0 0;
        float: left;
    }

    #template {
        width: 380px;
    }

        #template ol {
            float: left;
            margin: 0 0 0 30px;
            padding: 10px 10px 0 10px;
        }

        #template:after {
            content: ".";
            display: block;
            height: 0;
            clear: both;
            visibility: hidden;
        }

        #template .k-button {
            float: left;
            clear: left;
            margin: 5px 0 5px 12px;
        }
</style>                                                                                                                           </style>